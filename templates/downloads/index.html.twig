{% extends 'base.html.twig' %}

{% block content %}
    <div class="column is-3">
        <nav class="panel">
            <p class="panel-heading">Filters</p>
            <div class="panel-block">
                <p class="control has-icons-left">
                    <input class="input is-small" type="text" placeholder="Search" id="search">
                    <span class="icon is-small is-left">
          <i class="fas fa-search"></i>
        </span>
                </p>
            </div>
            {% for version in versions %}
                <label class="panel-block">
                    <input type="checkbox" rel="mcversion" value="{{ version }}">{{ version }}
                </label>
            {% endfor %}
        </nav>
    </div>
    <div class="column is-9">
        <div class="card">
            <header class="card-header">
                <nav class="level card-header-title">
                    <!-- Left side -->
                    <div class="level-left">
                        <div class="level-item">
                            <p class="subtitle is-5">
                                <strong>Archive of {{ application.name }} Builds</strong>
                            </p>
                        </div>
                    </div>

                    <!-- Right side -->
                    <div class="level-right">
                        {% if officialLinks|length > 0 %}
                            <p class="level-item"><strong>Official Links:</strong></p>
                            {% for name,link in officialLinks %}
                                <p class="level-item">
                                    <a href="{{ link }}" target="_blank">{{ name }}</a>
                                </p>
                            {% endfor %}
                        {% endif %}
                    </div>
                </nav>
            </header>
            <div class="card-content" style="padding:0;margin-top: 3px;">
                <div class="content has-text-centered">
                    <table class="table">
                        <thead>
                        <tr class="first">
                            <th>Name</th>
                            <th>Version</th>
                            <th>Size</th>
                            <th>Date</th>
                            <th>Download</th>
                        </tr>
                        </thead>
                        {% for build in builds %}
                            <tr>
                                <td>{{ build.fileName }}</td>
                                <td class="mcversion">{{ build.version }}</td>
                                <td>{{ build.size }}</td>
                                <td>{{ build.date }}</td>
                                <td>
                                    <a class="button is-info"
                                       href="{{ url('grab', {'applicationName': application.name, 'fileName': build.fileName}) }}">Download</a>
                                </td>
                            </tr>
                        {% endfor %}
                    </table>
                </div>
            </div>
        </div>
    </div>
{% endblock %}